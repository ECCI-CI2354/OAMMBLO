<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/timeline_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/timeline_title"
            android:textSize="18dip" />

        <ListView
            android:id="@+id/timeline_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/timeline_buttons"
            android:layout_below="@+id/timeline_title" >
        </ListView>

        <LinearLayout
            android:id="@+id/timeline_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="0dp"
            android:padding="5dp"
            android:weightSum="100" >

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="loadData"
                android:text="Load" />

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="clearData"
                android:text="Clear" />
        </LinearLayout>
    </RelativeLayout>
	<TextView android:id="@+id/timeline_empty"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:text="No results"
	    android:background="#FF0000"
	    />
</FrameLayout>